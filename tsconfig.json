{
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./Scripts/",
        "rootDirs": ["Scripts", "Mods"],
        "module": "es2015",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES6",
        "allowJs": true
    },

    "include": [
        "./**/*.ts",
        "./**/*.d.ts"
    ]
}